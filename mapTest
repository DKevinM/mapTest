        });

        window.addEventListener('message', (event) => {
            if (event.data === 'ready') {
                // Initial data fetch for the map center
                fetchPurpleAirData(map.getCenter().lat, map.getCenter().lng);
            }
        });

        window.onload = () => {
            window.parent.postMessage('ready', '*');
        };

        // Integrate Windy API
        windyInit({
            key: 'yVY0cXn4PmZ0G3BjUvQ7IpSqOG48bgiL',
            lat: 53.535645,
            lon: -113.47194,
            zoom: 5,
        }, windyAPI => {
            const { map } = windyAPI;
            L.popup()
                .setLatLng([53.535645, -113.47194])
                .setContent('Windy map integrated!')
                .openOn(map);
        });
    </script>
